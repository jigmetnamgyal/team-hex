{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDirs": [
      "./src",
      "./scripts",
      "./test"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./scripts",
    "./test",
    "./typechain",
    "./helpers",
    "./utils",
    "./src"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}